{{!-- SELECTED IS A CSS PROPERTY --}}
<div class="table-row {{if this.isSelected 'selected'}} {{if this.isStriped 'zebra'}}" {{action @toggleBookSelection @book}}
    role="button">
    <div class="table-cell">{{@book.title}}</div>
    <div class="table-cell">{{@book.author}}</div>
    <div class="table-cell">{{@book.publicationYear}}</div>
    <div class="table-cell">{{@book.pages}}</div>
    <div class="table-cell">
        {{#if @toggleAction}}
        <button {{action @toggleAction @book}}>{{@toggleText}}</button>
        {{/if}}
        {{!-- link-to label routename parameter --}}
        {{link-to 'Visit' 'books.book' @book.id tagName="button"}}
    </div>
</div>